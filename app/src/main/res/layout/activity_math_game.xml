<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            >
         <!--   android:layout_gravity="center_horizontal" -->

            <EditText
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="textPersonName"
                android:layout_margin="@dimen/Margin"
                android:text="00:00:00"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/startBt"
                android:layout_width="@dimen/timerButtonSize"
                android:layout_height="@dimen/timerButtonSize"
                android:text="Start"
                android:textSize="12dp"
                android:layout_margin="@dimen/Margin"
                />

            <ToggleButton
                android:layout_width="@dimen/timerButtonSize"
                android:layout_height="@dimen/timerButtonSize"
                android:textOff="Pause"
                android:textSize="12dp"
                android:textOn="Play"
                android:id="@+id/pauseBtn"
                android:layout_margin="@dimen/Margin"
                />

            <Button
                android:id="@+id/exitBt"
                android:layout_width="@dimen/timerButtonSize"
                android:layout_height="@dimen/timerButtonSize"
                android:text="Exit"
                android:textSize="12dp"
                android:layout_margin="@dimen/Margin"

                />

        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="5"
            android:rowCount="5"
            android:background="?android:attr/selectableItemBackground">

            <ImageButton
                android:id="@+id/b00"
                android:layout_row="0"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b01"
                android:layout_row="0"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b02"
                android:layout_row="0"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b03"
                android:layout_row="0"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b04"
                android:layout_row="0"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b10"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b11"
                android:layout_row="1"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b12"
                android:layout_row="1"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b13"
                android:layout_row="1"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b14"
                android:layout_row="1"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>

            <ImageButton
                android:id="@+id/b20"
                android:layout_row="2"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b21"
                android:layout_row="2"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b22"
                android:layout_row="2"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b23"
                android:layout_row="2"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b24"
                android:layout_row="2"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>

            <ImageButton
                android:id="@+id/b30"
                android:layout_row="3"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b31"
                android:layout_row="3"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b32"
                android:layout_row="3"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b33"
                android:layout_row="3"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b34"
                android:layout_row="3"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>

            <ImageButton
                android:id="@+id/b40"
                android:layout_row="4"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b41"
                android:layout_row="4"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b42"
                android:layout_row="4"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b43"
                android:layout_row="4"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginRight="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b44"
                android:layout_row="4"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">
            <!--    android:layout_gravity="center_horizontal" -->

            <TextView
                android:id="@+id/tSScore"
                android:text="@string/Steps"
                android:textSize="@dimen/textScore24"
                style="@style/textGameStyle24"/>

            <TextView
                android:id="@+id/tScore"
                android:textSize="@dimen/textScore24"
                style="@style/textGameStyle24"/>

            <TextView
                android:id="@+id/tBestSScore"
                android:text="@string/bestScore"
                android:textSize="@dimen/textBestScore24"
                style="@style/textGameStyle24"/>

            <TextView
                android:id="@+id/tBestScore"
                android:textSize="@dimen/textBestScore24"
                style="@style/textGameStyle24"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp">
        <!--    android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            -->

            <Button
                android:layout_height="@dimen/buttonHeight"
                android:layout_width="@dimen/buttonWidth"
                android:id="@+id/bNewGame"
                android:text="New Game"
                android:textSize="10dp"
                android:layout_margin="@dimen/Margin"/>

            <Button
                android:id="@+id/bBackMenu"
                android:layout_width="@dimen/buttonWidth"
                android:layout_height="@dimen/buttonHeight"
                android:text="Main Menu"
                android:textSize="10dp"
                android:layout_margin="@dimen/Margin"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>